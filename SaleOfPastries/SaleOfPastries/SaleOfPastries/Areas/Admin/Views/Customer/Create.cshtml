@model Customer

@{
    ViewBag.Title = "Create Customer";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Customer</a>
    </li>
    <li class="breadcrumb-item active">Create</li>
</ol>

<!-- Icon Cards-->
<form asp-action="Create" asp-controller="Customer" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name"/>
                <span asp-validation-for="Name" style="color:red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <input type="text" class="form-control" asp-for="Gender"/>
                <span asp-validation-for="Gender" style="color:red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" class="form-control" asp-for="Email"/>
                <span asp-validation-for="Email" style="color:red;"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Address"></label>
                <input type="text" class="form-control" asp-for="Address" />
                <span asp-validation-for="Address" style="color:red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input type="text" class="form-control" asp-for="Phone" />
                <span asp-validation-for="Phone" style="color:red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="status"></label>
                <select asp-for="status" class="form-control">
                    <option value="0">Active</option>
                    <option value="1">noActive</option>
                </select>
                <span asp-validation-for="status" style="color: red;"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Note"></label>
                <textarea class="form-control" rows="5" cols="5" asp-for="Note"></textarea>
                <span asp-validation-for="Note" style="color:red;"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary offset-3">Add</button>
            </div>
        </div>
    </div>
</form>
<!-- Area Chart Example-->
<div class="card">
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
