@model IEnumerable<InvoiceView>

@{
    ViewBag.Title = "Detail Customer Invoice";

}
<div class="col-md-12">
    <div class="row">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ID_HOADON)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.MOTA_SP)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.GIA)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.SOLUONG)
                    </th>
                    <th scope="col" class="text-center">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID_HOADON)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MOTA_SP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GIA)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SOLUONG)
                        </td>
                        <td class="text-center">
                            @*<a asp-controller="InvoiceDetail" asp-action="Edit" asp-route-id="@Model.ID_SP" class="btn btn-info">Edit</a>*@
                            <a asp-action="Index" class="btn btn-primary">Back to List</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>