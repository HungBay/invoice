@model NewProduct

@{ 
    ViewBag.Title = "Delete NewProduct";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">TypeProduct</a>
    </li>
    <li class="breadcrumb-item active">Delete</li>
</ol>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Title)</th>
                <td scope="row">@Html.DisplayFor(model => model.Title)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Context)</th>
                <td scope="row">@Html.DisplayFor(model => model.Context)</td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Image)</th>
                <td scope="row"><img class="rounded d-block" width="200" height="200" src="~/image/product/@Html.DisplayFor(model => model.Image)" /></td>
            </tr>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.status)</th>
                <td scope="row">@Html.DisplayFor(model => model.status)</td>
            </tr>
        </table>
    </div>
</div>
<div class="row>
    <div class="col-md-12">
        <form asp-action="Delete" asp-controller="NewProduct" method="post">
            <input type="hidden" asp-for="Id"/>
            <button type="submit" class="btn btn-primary offset-3">Delete</button>
            <a class="btn btn-info" asp-action="Index" asp-controller="NewProduct" asp-area="Admin" style="color:white;">Back</a>
        </form>
    </div>
</div>
