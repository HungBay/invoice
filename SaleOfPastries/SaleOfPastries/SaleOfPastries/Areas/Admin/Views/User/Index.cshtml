@model IEnumerable<User>

@{ 
    ViewBag.Title = "User";
}


<div class="container">
    <p>
        <a asp-action="Create" asp-controller="User">Create New</a>
    </p>
    <table class="table table-dark">
        <tr>
            <td scope="col">@Html.DisplayNameFor(model => model.FullName)</td>
            <td scope="col">@Html.DisplayNameFor(model => model.Email)</td>
            <td scope="col">@Html.DisplayNameFor(model => model.Phone)</td>
            <td scope="col">@Html.DisplayNameFor(model => model.Address)</td>
            <td scope="col">@Html.DisplayNameFor(model => model.status)</td>
            <td colspan="2" class="text-center">Action</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="wow fadeInDown" data-wow-delay="0.5s">
                <td scope="col">@Html.DisplayFor(modelItem => item.FullName)</td>
                <td scope="col">@Html.DisplayFor(modelItem => item.Email)</td>
                <td scope="col">@Html.DisplayFor(modelItem => item.Phone)</td>
                <td scope="col">@Html.DisplayFor(modelItem => item.Address)</td>
                <td scope="col">@Html.DisplayFor(modelItem => item.status)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>